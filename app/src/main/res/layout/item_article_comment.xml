<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:id="@+id/commentLayout"
    android:background="#EEEEEE"
    android:elevation="6dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:background="#FFFFFF"
        android:id="@+id/cardViewInComment"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:padding="10dp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/circleImageViewInComment"
                />

            <TextView
                android:text="Saber"
                android:textColor="#6d7b82"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/userNameInComment"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="11dp"
                android:layout_alignTop="@+id/circleImageViewInComment"
                android:layout_toEndOf="@+id/circleImageViewInComment" />

            <TextView
                android:text="TextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextView"
                android:textColor="#101010"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewInComment"
                android:layout_below="@+id/userNameInComment"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp" />

            <TextView
                android:text="TextView"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/timeInComment"
                android:layout_alignBaseline="@+id/userNameInComment"
                android:layout_alignBottom="@+id/userNameInComment"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>