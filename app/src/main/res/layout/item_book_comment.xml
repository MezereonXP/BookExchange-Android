<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:id="@+id/commentLayout"
    android:background="#EEEEEE"
    android:elevation="6dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:background="#FFFFFF"
        android:id="@+id/cardViewInBookComment"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:padding="10dp">


            <TextView
                android:id="@+id/dateInBookComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_alignBaseline="@+id/nameInBookComment"
                android:layout_alignBottom="@+id/nameInBookComment"
                android:layout_toEndOf="@+id/nameInBookComment"
                android:layout_marginStart="28dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImageViewInBookComment"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_launcher"
                android:layout_alignBottom="@+id/bookPicInBookComment"/>

            <TextView
                android:id="@+id/nameInBookComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="Saber"
                android:textColor="#6d7b82"
                android:layout_alignBottom="@+id/bookPicInBookComment"/>

            <TextView
                android:id="@+id/titleInBookComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:maxWidth="250dp"
                android:text="TextViewTextViewTextView"
                android:textColor="#101010"
                android:textSize="18sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:id="@+id/bookPicInBookComment"
                android:layout_width="50dp"
                android:layout_height="70dp"
                app:srcCompat="@color/background_tab_pressed"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>