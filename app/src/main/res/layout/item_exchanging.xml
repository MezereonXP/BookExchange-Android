<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:id="@+id/itemLayout"
    android:background="#EEEEEE"
    android:elevation="6dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:background="#FFFFFF"
        android:id="@+id/cardViewInExchanging"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:padding="10dp">

            <TextView
                android:id="@+id/sendNumber"
                android:textColor="#656565"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="5dp"
                android:text="发布物流"
                android:layout_marginLeft="160dp"
                android:textSize="12sp"
                android:layout_alignBottom="@+id/checkNumberInExchanging"
                 />

            <ImageView
                android:id="@+id/bookPicInExchanging"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/userNameInExchanging"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/booknameInExchanging"
                android:text="TextView" />

            <TextView
                android:id="@+id/booknameInExchanging"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userNameInExchanging"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/bookPicInExchanging"
                android:text="TextView"
                android:maxLines="1"
                android:textColor="#101010"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/dateInExchanging"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="14dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/checkNumberInExchanging"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:text="查看对方物流"
                android:textColor="#0277bd"
                android:textSize="12sp"
                android:layout_alignBottom="@+id/bookPicInExchanging"
                android:layout_alignEnd="@+id/dateInExchanging" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>