<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="#EEEEEE"
    android:elevation="6dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:background="#FFFFFF"
        android:id="@+id/cardView"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:padding="10dp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/circleImageView"
                 />

            <TextView
                android:text="Saber"
                android:textColor="#6d7b82"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="11dp"
                android:layout_alignTop="@+id/circleImageView"
                android:layout_toEndOf="@+id/circleImageView" />

            <TextView
                android:text="TextViewTextViewTextView"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textColor="#101010"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/circleImageView"
                android:layout_alignStart="@+id/circleImageView" />

            <TextView
                android:text="TextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextView"
                android:textColor="#101010"
                android:maxLines="8"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:layout_below="@+id/textView7"
                android:layout_alignParentStart="true"
                android:layout_marginTop="11dp" />

            <TextView
                android:text="229 点赞数"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#8a888a"
                android:id="@+id/textView9"
                android:layout_below="@+id/textView8"
                android:layout_alignParentStart="true"
                android:layout_marginTop="12dp" />

            <TextView
                android:text="50 评论"
                android:textColor="#8a888a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:layout_alignBaseline="@+id/textView9"
                android:layout_alignBottom="@+id/textView9"
                android:layout_toEndOf="@+id/textView5" />

            <Button
                android:text="关注"
                android:textColor="#010101"
                android:elevation="10dp"
                android:background="#FFFFFF"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:id="@+id/button3"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>