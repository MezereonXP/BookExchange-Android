<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
  
    android:id="@+id/commentLayout"
    android:background="#EEEEEE"
    android:elevation="6dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:background="#FFFFFF"
        android:id="@+id/cardView"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:padding="10dp">


            <TextView
                android:id="@+id/dateInTalk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_alignBaseline="@+id/textView9"
                android:layout_alignBottom="@+id/textView9"
                android:layout_alignStart="@+id/textView8" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@+id/circleImageView"
                android:text="Saber"
                android:textColor="#404040"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="TextViewTextViewTextView"
                android:textColor="#101010"
                android:textSize="20sp"
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_below="@+id/textView5"
                android:layout_alignStart="@+id/textView5" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="TextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextView"
                android:textColor="#656565"
                android:layout_below="@+id/textView7"
                android:textSize="16sp"
                android:layout_alignStart="@+id/textView7" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView8"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="220dp"
                android:text="229 点赞数"
                android:textColor="#8a888a" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50 评论"
                android:textColor="#8a888a"
                android:layout_alignRight="@+id/textView8"
                android:layout_alignBottom="@+id/textView9"
                android:layout_alignTop="@+id/textView9" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>