<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:id="@+id/itemLayout"
    android:background="#EEEEEE"
    android:elevation="6dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:background="#FFFFFF"
        android:id="@+id/cardViewInBeforeExchange"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:padding="10dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:id="@+id/bookPicInBeforeExchange"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/userNameInBeforeExchange"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/booknameInBeforeExchange" />

            <TextView
                android:text="TextView"
                android:textSize="18sp"
                android:textColor="#101010"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:id="@+id/booknameInBeforeExchange"
                android:layout_below="@+id/userNameInBeforeExchange"
                android:layout_toEndOf="@+id/bookPicInBeforeExchange" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dateInBeforeExchange"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="14dp" />


            <TextView
                android:text="正在等待对方同意...."
                android:visibility="invisible"
                android:textSize="18sp"
                android:textColor="#0277bd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView25"
                android:layout_alignBaseline="@+id/button11"
                android:layout_alignBottom="@+id/button11"
                android:layout_alignParentEnd="true" />

            <Button
                android:text="查看请求"
                android:textSize="18sp"
                android:textColor="#0277bd"
                android:background="#FFFFFF"
                android:elevation="6dp"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:id="@+id/button11"
                android:layout_below="@+id/booknameInBeforeExchange"
                android:layout_alignEnd="@+id/dateInBeforeExchange" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>